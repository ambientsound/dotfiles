#!/bin/bash
# Copy the kbash configuration to another system

set -e

if [ "$1" == "" ]; then
    echo "Syntax: `basename $0` [user@]host [[user@]host] [...]"
    exit 1
fi

for host
do
    echo "**********"
    echo "Installing kbash on $host"
    echo "**********"
    ssh-copy-id $host >/dev/null
    rsync -aq ~/.kbash $host:
    ssh $host 'yes "" | ~/.kbash/bin/setup-kbash'
done
